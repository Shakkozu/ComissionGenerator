<UserControl
    x:Class="ComissionGeneratorUWP.ItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ComissionGeneratorUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="600">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>



        <StackPanel Orientation="Horizontal" Margin="0,40,20,0" Grid.ColumnSpan="2">

            <TextBlock x:Name="id" Text="{x:Bind Id}" VerticalAlignment="Center" Margin="0,30,20,0" FontSize="20" FontWeight="Bold"/>

            <StackPanel Orientation="Vertical" Grid.Column="0">
                <TextBlock Text="Towar"/>
                <TextBox x:Name="itemName" HorizontalAlignment="Stretch"/>

                <TextBlock Margin="0,30,0,0" Text="Cena [zł]"/>
                <TextBox x:Name="itemPrice"/>
            </StackPanel>

            <StackPanel Margin="40,0" Orientation="Vertical" Grid.Column="1">
                <TextBlock Text="Opis"/>
                <RichEditBox Margin="0,10" TextWrapping="Wrap" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="itemDescription" />
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
