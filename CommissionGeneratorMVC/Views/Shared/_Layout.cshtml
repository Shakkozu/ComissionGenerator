<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comission Generator</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
        <div class="container">

        <nav class="navbar navbar-expand-lg container-lg">


            <div class="navbar-header">
                @Html.ActionLink("Commission Generator", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <button class="navbar-toggler navbar-dark" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">@Html.ActionLink("Generate Commission", "Create", "Commission", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Clients", "Index", "Clients", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Companies", "Index", "Companies", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Creators", "Index", "Creators", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Products", "Index", "Items", new { area = "" }, new { @class = "nav-link" })</li>

                </ul>
            </div>

        </nav>
    </div>

        <div class="container body-content">
            <div class="alert alert-info" role="alert">
                This is sample application. Data put in database should not be real, because it's public, and can be accessed by every person. Data can be also removed from database and it's not stored locally.
            </div>
            @RenderBody()
            <hr class="bg-light" />
            <footer class="text-center">
                <p>Comission Generator &copy; 2020 Shakkozu </p>
            </footer>
        </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
