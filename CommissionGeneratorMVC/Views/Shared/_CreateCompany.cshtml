                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.CreationClient.CompanyName, new { htmlAttributes = new { @class = "form-control" } })

                                            @Html.ValidationMessageFor(model => model.CreationClient.CompanyName, "", new { @class = "text-danger" })
